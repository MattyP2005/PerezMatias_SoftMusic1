@model List<SpotifyClone.Models.Cancion>

@{
    ViewData["Title"] = "Todas las Canciones";
}

<h2 class="mb-4 text-success">🎼 Todas las Canciones</h2>

@if (!Model.Any())
{
    <p class="text-muted">No hay canciones disponibles aún.</p>
}
else
{
    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-4">
        @foreach (var c in Model)
        {
            <div class="col">
                <div class="card h-100 bg-dark text-white border-0 shadow-lg rounded-4">
                    @if (!string.IsNullOrEmpty(c.Artista?.PortadaUrl))
                    {
                        <img src="@c.Artista.PortadaUrl" alt="Portada del artista"
                             class="card-img-top" style="height: 200px; object-fit: cover;" />
                    }

                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title text-info">@c.Titulo</h5>
                        <p class="card-text mb-2">
                            <span class="d-block"><strong>🎧 Género:</strong> @c.Genero</span>
                            <span class="d-block"><strong>👤 Artista:</strong> @c.Artista?.Nombre</span>
                        </p>

                        <audio controls src="@c.Url" class="w-100 mb-3"></audio>

                        <div class="mt-auto d-flex justify-content-between">
                            <a href="@Url.Action("Descargar", "Cancion", new { id = c.Id })" class="btn btn-sm btn-success rounded-pill">⬇️ Descargar</a>
                            <button class="btn btn-sm btn-primary rounded-pill" onclick="copiarUrl('@c.Url')">🔗 Compartir</button>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}

@section Scripts {
    <script>
        function copiarUrl(url) {
            navigator.clipboard.writeText(window.location.origin + url)
                .then(() => alert("URL copiada al portapapeles"))
                .catch(() => alert("No se pudo copiar el enlace"));
        }
    </script>
}