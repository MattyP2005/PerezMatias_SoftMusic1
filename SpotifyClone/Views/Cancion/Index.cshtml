@model List<SpotifyClone.Models.Cancion>

@{
    ViewData["Title"] = "Todas las Canciones";
}

<h2 class="mb-4 text-success">🎼 Todas las Canciones</h2>

@if (!Model.Any())
{
    <p class="text-muted">No hay canciones disponibles aún.</p>
}
else
{
    <div class="row">
        @foreach (var c in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card h-100 shadow-sm bg-light border-0">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">@c.Titulo</h5>
                        <p class="card-text">
                            <strong>Género:</strong> @c.Genero<br />
                            <strong>Artista:</strong> @c.Artista?.Nombre
                        </p>
                        <audio controls src="@c.Url" class="w-100 mb-2"></audio>

                        <div class="mt-auto d-flex justify-content-between">
                            <a href="@Url.Action("Descargar", "Cancion", new { id = c.Id })" class="btn btn-sm btn-outline-success">⬇️ Descargar</a>
                            <button class="btn btn-sm btn-outline-primary" onclick="copiarUrl('@c.Url')">🔗 Compartir</button>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}

@section Scripts {
    <script>
        function copiarUrl(url) {
            navigator.clipboard.writeText(window.location.origin + url)
                .then(() => alert("URL copiada al portapapeles"))
                .catch(() => alert("No se pudo copiar el enlace"));
        }
    </script>
}