@model List<SpotifyClone.Models.Artista>

@{
    ViewData["Title"] = "Artistas";
}

<h2 class="mb-4 text-primary">🎤 Todos los Artistas</h2>

@if (!Model.Any())
{
    <p class="text-muted">No hay artistas agregados aún.</p>
}
else
{
    <div class="row">
        @foreach (var artista in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card shadow-sm">
                    @if (!string.IsNullOrEmpty(artista.PortadaUrl))
                    {
                        <img src="@artista.PortadaUrl" class="card-img-top" alt="Portada de @artista.Nombre" style="height:200px; object-fit:cover;" />
                    }
                    else
                    {
                        <img src="~/images/default-artist.png" class="card-img-top" alt="Portada predeterminada" style="height:200px; object-fit:cover;" />
                    }
                    <div class="card-body">
                        <h5 class="card-title">@artista.Nombre</h5>
                        <p class="card-text">@artista.Biografia</p>
                        <a href="@Url.Action("Details", "Artistas", new { id = artista.Id })" class="btn btn-primary btn-sm">Ver detalles</a>
                    </div>
                </div>
            </div>
        }
    </div>
}