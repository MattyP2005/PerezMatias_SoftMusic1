@model SpotifyClone.Models.ViewModels.RegistroViewModel

@{
    ViewData["Title"] = "Registro";
}

<h2 class="text-primary mb-3">Crear una cuenta</h2>

<form asp-action="Registrar" method="post">
    <div class="mb-3">
        <label asp-for="Nombre" class="form-label"></label>
        <input asp-for="Nombre" class="form-control" />
        <span asp-validation-for="Nombre" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Email" class="form-label"></label>
        <input asp-for="Email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Password" class="form-label"></label>
        <input asp-for="Password" class="form-control" type="password" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Tipo de Plan</label><br />
        <input type="radio" asp-for="Plan" value="Gratis" checked /> Gratis
        <input type="radio" asp-for="Plan" value="Premium" class="ms-3" /> Premium
        <span asp-validation-for="Plan" class="text-danger d-block"></span>
    </div>

    <button type="submit" class="btn btn-success">Registrarse</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
