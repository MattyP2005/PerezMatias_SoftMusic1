@using SpotifyClone.Models.ViewModels
@model ElegirSubPlanViewModel

@{
    ViewData["Title"] = "Elige tu plan Premium";
}

<div class="container mt-5 text-center">
    <h2 class="mb-4 text-danger fw-bold">🎧 Elige tu tipo de Plan Premium</h2>

    <form asp-action="ElegirSubPlan" method="post" class="mx-auto" style="max-width: 400px;">
        <input type="hidden" asp-for="UsuarioId" />

        <div class="form-check text-start mb-3">
            <input class="form-check-input" type="radio" asp-for="SubPlan" value="Personal" checked />
            <label class="form-check-label">👤 Personal</label>
        </div>

        <div class="form-check text-start mb-3">
            <input class="form-check-input" type="radio" asp-for="SubPlan" value="Familiar" />
            <label class="form-check-label">👨‍👩‍👧‍👦 Familiar</label>
        </div>

        <div class="form-check text-start mb-4">
            <input class="form-check-input" type="radio" asp-for="SubPlan" value="Empresa" />
            <label class="form-check-label">🏢 Empresa</label>
        </div>

        <button type="submit" class="btn btn-success w-100">Continuar al Pago</button>
    </form>
</div>