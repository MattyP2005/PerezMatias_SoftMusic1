@model SpotifyClone.Models.Album

@{
    ViewData["Title"] = "Detalle del Álbum";
}

<h2>@Model.Titulo</h2>

<h3>Canciones en el álbum</h3>

@if (Model.AlbumCanciones != null && Model.AlbumCanciones.Any())
{
    <ul>
        @foreach (var ac in Model.AlbumCanciones)
        {
            <li>
                <strong>@ac.Cancion.Titulo</strong> - Artista: @ac.Cancion.Artista?.Nombre
            </li>
        }
    </ul>
}
else
{
    <p>No hay canciones asociadas a este álbum.</p>
}

<a href="@Url.Action("Index", "Album")" class="btn btn-secondary">Volver a la lista</a>