@model List<SpotifyClone.Models.Album>

@{
    ViewData["Title"] = "Álbumes del Artista";
}

<h2 class="mb-4 text-danger">🎶 Tus Álbumes</h2>

<a asp-action="Crear" class="btn btn-success mb-4">
    <i class="bi bi-plus-circle me-1"></i> Crear nuevo álbum
</a>

@if (!Model.Any())
{
    <p class="text-muted">Aún no has creado ningún álbum.</p>
}
else
{
    <div class="row row-cols-1 row-cols-md-3 g-4">
        @foreach (var album in Model)
        {
            <div class="col">
                <div class="card h-100 shadow-sm album-card border-0">
                    <div class="bg-dark text-center text-white d-flex align-items-center justify-content-center rounded-top" style="height: 180px;">
                        <span style="font-size: 3.5rem;">💿</span>
                    </div>

                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title text-truncate">@album.Titulo</h5>
                        <p class="card-text text-muted mb-2">
                            @album.AlbumCanciones?.Count canción(es) • @album.FechaLanzamiento.ToShortDateString()
                        </p>

                        <div class="mt-auto d-flex flex-wrap gap-2">
                            <a asp-action="Ver" asp-route-id="@album.Id" class="btn btn-outline-secondary btn-sm">
                                <i class="bi bi-eye"></i> Ver
                            </a>

                            <a asp-action="AgregarCanciones" asp-route-id="@album.Id" class="btn btn-info btn-sm">
                                <i class="bi bi-music-note-list"></i> Añadir
                            </a>

                            <a asp-action="Editar" asp-route-id="@album.Id" class="btn btn-primary btn-sm">
                                <i class="bi bi-pencil"></i> Editar
                            </a>

                            <form method="post" asp-action="Eliminar" asp-route-id="@album.Id" class="d-inline" onsubmit="return confirm('¿Eliminar este álbum?');">
                                <button class="btn btn-danger btn-sm">
                                    <i class="bi bi-trash"></i> Eliminar
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}

<style>
    .album-card:hover {
        box-shadow: 0 0 15px rgba(255, 0, 128, 0.4);
        transform: scale(1.02);
        transition: all 0.3s ease-in-out;
    }

    .bi-disc {
        font-size: 4rem;
    }
</style>