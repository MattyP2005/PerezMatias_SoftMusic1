@model List<SpotifyClone.Models.Album>

@{
    ViewData["Title"] = "Álbumes del Artista";
}

<h2 class="mb-4 text-danger">🎶 Tus Álbumes</h2>

<a asp-action="Crear" class="btn btn-success mb-4">
    <i class="bi bi-plus-circle"></i> Crear nuevo álbum
</a>

@if (!Model.Any())
{
    <p class="text-muted">Aún no has creado ningún álbum.</p>
}
else
{
    <div class="row row-cols-1 row-cols-md-3 g-4">
        @foreach (var album in Model)
        {
            <div class="col">
                <div class="card h-100 shadow-sm album-card position-relative">
                    <div class="bg-dark text-center text-white d-flex align-items-center justify-content-center" style="height: 180px;">
                        <span style="font-size: 3.5rem;">💿</span>
                    </div>

                    <div class="card-body">
                        <h5 class="card-title text-truncate">@album.Titulo</h5>
                        <p class="card-text text-muted mb-1">
                            @album.AlbumCanciones?.Count canción(es) • @album.FechaLanzamiento.ToShortDateString()
                        </p>

                        <a href="@Url.Action("Ver", "Album", new { id = album.Id })" class="stretched-link"></a>

                        <a href="@Url.Action("AgregarCanciones", "Album", new { id = album.Id })" class="btn btn-info btn-sm me-2">
                            <i class="bi bi-music-note-list"></i> Añadir Canciones
                        </a>

                        <a href="@Url.Action("Editar", "Album", new { id = album.Id })" class="btn btn-primary btn-sm me-2">
                            <i class="bi bi-pencil"></i> Editar
                        </a>

                        <form method="post" asp-action="Eliminar" asp-route-id="@album.Id" class="d-inline" onsubmit="return confirm('¿Eliminar este álbum?');">
                            <button class="btn btn-danger btn-sm">
                                <i class="bi bi-trash"></i> Eliminar
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        }
    </div>
}

<style>
    .album-card:hover {
        box-shadow: 0 0 15px rgba(255, 0, 128, 0.4);
        transform: scale(1.03);
        transition: all 0.3s ease-in-out;
    }

    .bi-disc {
        font-size: 4rem;
    }
</style>