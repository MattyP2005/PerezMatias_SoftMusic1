@model SpotifyClone.Models.ViewModels.HomeViewModel

@{
    ViewData["Title"] = "Inicio";
}

<!-- Álbumes -->
<h2 class="text-primary mb-4">🎧 Álbumes Disponibles</h2>

<div class="row row-cols-2 row-cols-md-5 g-4">
    @foreach (var album in Model.Albums)
    {
        var portada = album.AlbumCanciones.FirstOrDefault()?.Cancion?.Artista?.PortadaUrl;

        <div class="col">
            <div class="text-center">
                <a href="@Url.Action("Ver", "Album", new { id = album.Id })" class="text-decoration-none text-white">
                    <div class="rounded shadow-sm overflow-hidden" style="aspect-ratio: 1 / 1;">
                        <img src="@portada" class="w-100 h-100" style="object-fit: cover;" alt="Portada del álbum" />
                    </div>
                    <p class="mt-2 mb-0 fw-semibold text-white">@album.Titulo</p>
                </a>
            </div>
        </div>
    }
</div>

<hr class="my-5 border-light" />

<!-- Playlists -->
<h2 class="text-success mt-5 mb-4">⭐ Playlists Públicas</h2>
<p class="text-muted">Total de playlists públicas: @Model.PlaylistsPublicas.Count()</p>

<div class="row row-cols-2 row-cols-md-5 g-4">
    @foreach (var playlist in Model.PlaylistsPublicas)
    {
        <p class="text-warning small">🎵 Canciones: @playlist.Canciones.Count</p>

        var portada = playlist.Canciones.FirstOrDefault()?.Cancion?.Artista?.PortadaUrl;

        <div class="col">
             <div class="text-center">
                  <a href="#" class="text-decoration-none text-white">
                      <div class="rounded shadow-sm overflow-hidden" style="aspect-ratio: 1 / 1;">
                            <img src="@portada" class="w-100 h-100" style="object-fit: cover;" alt="Portada de la playlist" />
                      </div>
                      <p class="mt-2 mb-0 fw-semibold text-white">@playlist.Nombre</p>
                  </a>
             </div>
        </div>
    }
</div>

<hr class="my-5 border-light" />

<!-- Canciones Sueltas -->
<h2 class="text-danger mt-5 mb-4">🎶 Canciones Sueltas</h2>

@if (!Model.CancionesSueltas.Any())
{
    <p class="text-muted">No hay canciones sueltas aún.</p>
}
else
{
    <div class="row row-cols-2 row-cols-md-5 g-4">
        @foreach (var c in Model.CancionesSueltas)
        {
            <div class="col">
                <div class="card bg-dark text-white border-0 rounded shadow-sm h-100">
                    @if (!string.IsNullOrEmpty(c.Artista?.PortadaUrl))
                    {
                        <div style="aspect-ratio: 1 / 1; overflow: hidden;">
                            <img src="@c.Artista.PortadaUrl" class="w-100 h-100" style="object-fit: cover;" />
                        </div>
                    }

                    <div class="card-body p-2 d-flex flex-column">
                        <h6 class="card-title text-info mb-1">@c.Titulo</h6>
                        <small class="text-light mb-2">@c.Artista?.Nombre</small>

                        <audio controls src="@c.Url" class="w-100 mb-2"></audio>

                        <div class="d-flex justify-content-between mt-auto">
                            <a href="@Url.Action("Descargar", "Cancion", new { id = c.Id })" class="btn btn-sm btn-outline-success px-2 py-1">⬇️</a>
                            <button class="btn btn-sm btn-outline-light px-2 py-1" onclick="copiarUrl('@c.Url')">🔗</button>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}


@section Scripts {
    <script>
        function copiarUrl(url) {
            navigator.clipboard.writeText(window.location.origin + url)
                .then(() => alert("🎧 URL copiada al portapapeles"))
                .catch(() => alert("No se pudo copiar el enlace"));
        }
    </script>
}