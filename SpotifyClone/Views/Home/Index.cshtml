@model SpotifyClone.Models.ViewModels.HomeViewModel

@{
    ViewData["Title"] = "Inicio";
}

<!-- Álbumes -->
<h2 class="text-primary mb-4">🎧 Álbumes Disponibles</h2>

<div class="row">
    @foreach (var album in Model.Albums)
    {
        <div class="col-md-4 mb-4">
            <div class="card h-100 bg-dark text-white shadow-lg border-0 rounded-4">
                @if (album.AlbumCanciones.Any() && album.AlbumCanciones.First().Cancion?.Artista?.PortadaUrl != null)
                {
                    <img src="@album.AlbumCanciones.First().Cancion.Artista.PortadaUrl" class="card-img-top rounded-top-4" style="height: 200px; object-fit: cover;" />
                }

                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">@album.Titulo</h5>
                    <p class="card-text text-muted">@album.FechaLanzamiento.ToShortDateString()</p>

                    @if (!album.AlbumCanciones.Any())
                    {
                        <p class="text-muted">Este álbum no tiene canciones.</p>
                    }
                    else
                    {
                        <ul class="list-unstyled">
                            @foreach (var c in album.AlbumCanciones)
                            {
                                <li class="mb-2">
                                    <strong>@c.Cancion.Titulo</strong> - @c.Cancion.Genero <br />
                                    <audio controls src="@c.Cancion.Url" class="w-100 mt-1"></audio>
                                </li>
                            }
                        </ul>
                    }
                </div>
            </div>
        </div>
    }
</div>

<hr class="my-5 border-light" />

<!-- Playlists -->
<h2 class="text-success mb-4">⭐ Playlists Públicas</h2>

<div class="row">
    @foreach (var playlist in Model.PlaylistsPublicas)
    {
        <div class="col-md-4 mb-4">
            <div class="card bg-light shadow-sm border-0 h-100 rounded-4">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title text-dark">📀 @playlist.Nombre</h5>

                    @if (!playlist.Canciones.Any())
                    {
                        <p class="text-muted">Esta playlist está vacía.</p>
                    }
                    else
                    {
                        <ul class="list-unstyled">
                            @foreach (var pc in playlist.Canciones)
                            {
                                <li class="mb-2">
                                    <strong>@pc.Cancion.Titulo</strong> - @pc.Cancion.Genero <br />
                                    <audio controls src="@pc.Cancion.Url" class="w-100 mt-1"></audio>
                                </li>
                            }
                        </ul>
                    }
                </div>
            </div>
        </div>
    }
</div>

<hr class="my-5 border-light" />

<!-- Canciones Sueltas -->
<h2 class="text-danger mb-4">🎶 Canciones Sueltas</h2>

@if (!Model.CancionesSueltas.Any())
{
    <p class="text-muted">No hay canciones sueltas aún.</p>
}
else
{
    <div class="row">
        @foreach (var c in Model.CancionesSueltas)
        {
            <div class="col-md-4 mb-4">
                <div class="card shadow-lg h-100 bg-dark text-white border-0 rounded-4">
                    @if (!string.IsNullOrEmpty(c.Artista?.PortadaUrl))
                    {
                        <img src="@c.Artista.PortadaUrl" class="card-img-top rounded-top-4" style="height: 200px; object-fit: cover;" />
                    }

                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title text-info">@c.Titulo</h5>
                        <p class="card-text">
                            <strong>Género:</strong> @c.Genero <br />
                            <strong>Artista:</strong> @c.Artista?.Nombre
                        </p>

                        <audio controls src="@c.Url" class="w-100 mb-3"></audio>

                        <div class="d-flex justify-content-between mt-auto">
                            <a href="@Url.Action("Descargar", "Cancion", new { id = c.Id })" class="btn btn-sm btn-success rounded-pill px-3">
                                ⬇️ Descargar
                            </a>
                            <button class="btn btn-sm btn-outline-light rounded-pill px-3" onclick="copiarUrl('@c.Url')">
                                🔗 Compartir
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}

@section Scripts {
    <script>
        function copiarUrl(url) {
            navigator.clipboard.writeText(window.location.origin + url)
                .then(() => alert("🎧 URL copiada al portapapeles"))
                .catch(() => alert("No se pudo copiar el enlace"));
        }
    </script>
}